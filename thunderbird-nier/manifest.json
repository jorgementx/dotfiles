      "sidebar_highlight": "rgba(58, 55, 44, .8)",
      "sidebar_highlight_text": "#d0cab3",
      "sidebar_border": "#999",
      "sidebar_highlight_border": "#3a372c",

      "popup": "#d0cab3",
