{
  "manifest_version": 2,
  "browser_specific_settings": {
    "gecko": {
      "id": "",
      "strict_min_version": "60.0"
    }
  },
  "name": "Nier Automata Theme",
  "description": "Nier Automata inspired theme for Thunderbird",
  "version": "1.0",
  "theme": {
    "images": {
      "theme_frame": "image_cropped.png"
    },
    "colors": {
      // "button_background_active": "#3a372c",
      // "button_background_hover": "rgba(58, 55, 44, .8)",

      "frame": "#c8c2ab",

      "tab_background_text": "#3a372c",
      "tab_text": "#3a372c",
      "tab_line": "#3a372c",
      "tab_loading": "#3a372c",

      "bookmark_text": "#3a372c",

      "toolbar_field": "#d0cab3",
